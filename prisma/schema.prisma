// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StatusLog {
  id        Int      @id @default(autoincrement())
  message   String   @default("Server started")
  createdAt DateTime @default(now())
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  phone        String?
  addressLine1 String?
  addressLine2 String?
  city         String?
  state        String?
  zipCode      String?
  country      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  quotes       Quote[]
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  basePrice   Decimal     @db.Decimal(10, 2)
  currency    String      @default("BRL")
  stock       Int         @default(0)
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  quoteItems  QuoteItem[]
}

model Quote {
  id            Int               @id @default(autoincrement())
  referenceCode String            @unique
  user          User?             @relation(fields: [userId], references: [id])
  userId        Int?
  status        QuoteStatus       @default(DRAFT)
  notes         String?
  subtotal      Decimal           @db.Decimal(10, 2)
  discounts     Decimal           @default(0) @db.Decimal(10, 2)
  total         Decimal           @db.Decimal(10, 2)
  currency      String            @default("BRL")
  delivery      DeliverySchedule? @relation("QuoteDelivery")
  paymentLink   PaymentLink?      @relation("QuotePayment")
  items         QuoteItem[]
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

model QuoteItem {
  id        Int      @id @default(autoincrement())
  quote     Quote    @relation(fields: [quoteId], references: [id])
  quoteId   Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  unitPrice Decimal  @db.Decimal(10, 2)
  discount  Decimal  @default(0) @db.Decimal(10, 2)
  total     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DeliverySchedule {
  id            Int            @id @default(autoincrement())
  quote         Quote          @relation("QuoteDelivery", fields: [quoteId], references: [id])
  quoteId       Int            @unique
  scheduledDate DateTime
  status        DeliveryStatus @default(PENDING)
  instructions  String?
  addressLine1  String
  addressLine2  String?
  city          String
  state         String
  zipCode       String
  country       String         @default("Brasil")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model PaymentLink {
  id        Int           @id @default(autoincrement())
  quote     Quote         @relation("QuotePayment", fields: [quoteId], references: [id])
  quoteId   Int           @unique
  provider  String
  url       String
  expiresAt DateTime
  status    PaymentStatus @default(PENDING)
  amount    Decimal       @db.Decimal(10, 2)
  currency  String        @default("BRL")
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum QuoteStatus {
  DRAFT
  SENT
  APPROVED
  REJECTED
  SCHEDULED
  PAID
  CANCELLED
}

enum DeliveryStatus {
  PENDING
  SCHEDULED
  IN_TRANSIT
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  SENT
  PAID
  EXPIRED
  CANCELLED
}
